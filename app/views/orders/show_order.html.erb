<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="merch-item">
				<h2 class="main-heading">Confirm order</h2>
				<div class="table-responsive">
				<!-- <input type="checkbox" name="vehicle" value="Bike" class="Confirm-order"> 	Confirm order &nbsp;&nbsp;&nbsp;&nbsp; -->
		            <table class="table table-hover">
		                <thead>
		                    <tr>
		                        <th>Item Code</th>
		                        <th>Item Name</th>
		                        <th>Item Qty</th>
		                        <th>Item Price</th>
		                        <th>Sub Total</th>
		                    </tr>
		                </thead>

		                <tbody>
		                	<% i = 0 %>
		                    <% @items.each do |h| %>
	                            <tr>
	                                <td><%= h.code %></td>
	                                <td><%= h.name %></td>
	                                <td><%= @c[i] %></td>
	                                <td><%= h.price %></td>
	                                <td><%= @c[i].to_i * h.price %></td>
	                            </tr>
	                          	<% i += 1 %>
		                    <% end %>
		                </tbody>
		            </table>
		        </div>
			</div>
			<div class="modify-sec">
				<div class="modify-order pull-right">
					<%= link_to "Modify", modify_order_orders_path(type: 'm'), class:"btn btn-primary"%>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 pay-section">
			<div class="pay-btn">
				<%= form_tag make_order_orders_path do %>
					<%= check_box_tag :is_confirm %>  <span class="confirm">Confirm order</span><br/><br/>
					<%= submit_tag "Pay", class: "btn btn-primary submit-order" %>
				<% end %>
			</div>
		</div>
	</div>
</div>


